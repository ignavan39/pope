{
  "name": "pope",
  "version": "3.0.0",
  "description": "Zero dependency micro templating engine for strings only.",
  "main": "dist/pope.js",
  "types": "dist/pope.d.ts",
  "module": "dist/pope.es.js",
  "browser": "dist/pope.browser.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc index.ts --declaration --outDir ./build && rollup -c rollup.config.js && cp ./build/index.d.ts ./dist/pope.d.ts",
    "test": "node test/pope.spec.js"
  },
  "keywords": [
    "template",
    "templating",
    "string",
    "string-template",
    "micro",
    "template"
  ],
  "author": "amanvirk",
  "license": "MIT",
  "devDependencies": {
    "coveralls": "^3.1.0",
    "japa": "^3.1.1",
    "rollup": "^2.42.2",
    "rollup-plugin-dts": "^5.2.0",
    "rollup-plugin-uglify": "^6.0.4",
    "standard": "^16.0.3",
    "typescript": "^4.9.5",
    "uglify-es": "^3.2.0"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poppinss/pope.git"
  },
  "bugs": {
    "url": "https://github.com/poppinss/pope/issues"
  },
  "homepage": "https://github.com/poppinss/pope#readme"
